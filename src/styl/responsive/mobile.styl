// BASICS

.background-yellow
  background-color: $color-yellow

.card
  padding: $margin-small

// TYPE

p
  text-indent: $margin-mid
  &:first-child
    text-indent: 0

// HEADER

#header-menu
  li
    display: inline-block
    &:after
      content: ' | '
    &:last-child:after
      content: ''
    a
      display: inline-block
      &.active, &:hover
        border-bottom-color: black
        border-bottom-style: solid
        border-bottom-width: 2px